package javaBasic.ch04.sec02;

import java.util.Scanner;

public class While문연습 {

	public static void main(String[] args) {
		// 2 4 6 8 10 출력해보기
		// 2를 정수형 변수에 넣기
		// 정수형 변수를 2씩 더한다
		// 반복해서 출력한다.
        // 10이 넘으면 종료한다.
		/*
		Scanner sc=new Scanner(System.in);
		System.out.println("정수값을 입력해주세요 : ");
		int number = sc.nextInt();
		While  */
		
	
		int number = 2;
		while (number>10){
			System.out.println(number); //2
			number = number +2;
		}
		
	   //do while 문
/*	   do {반복할 내용}
	   while (조건식) */	
	
	 //1 2 3 4 5 ...10까지 나오게
	 int number2 = 1;
	 do {
		 System.out.println(number2);
		 number2++;
	 } while (number2 <=10);
	
	// 10 9 8 7 6 ...1
	 int number3 = 10;
	 do {
		 System.out.println(number3);
		 number3--;
	 } while (number3 > 0);
	
	
	
	

	
	
	
	
	
	
	
	
	
	
	
	
	}

}
