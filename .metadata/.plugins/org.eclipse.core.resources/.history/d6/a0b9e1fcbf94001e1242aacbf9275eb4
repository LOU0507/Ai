package javaBasic2.ch05.sec03;

import java.util.Scanner;

public class 학생정수분석 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
 Scanner sc = new Scanner(System.in);
 int menu = 1;
 int[] scores=null;
 
 int stCont = 0;
 int score = 0;
 int max = 0;
 int sum = 0;
 double avg = 0;
 double count = 0.0;
 
 while (menu !=5) {
 System.out.println("--------------------------------------------------");
 System.out.println("1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료");
 System.out.println("---------------------------------------------------");
 System.out.print("선택> ");
 menu = sc.nextInt();
 switch ( menu ) {
 case 1 : System.out.print("학생수> ");
          stCont =sc.nextInt();
          scores = new int[stCont];
          break;
     //   System.out.println(stCont); 임시코드 
 case 2 : for(int i =0; i < scores.length ; i++) {
	      System.out.print("scores["+i+"]> ");
	      scores[i] = sc.nextInt();
           }break;
 case 3 : for (int i =0; i < scores.length ; i++) {
	      System.out.println("scores["+i+"]: "+ scores[i]);
           }break;
 case 4 : for ( int i = 0; i< scores.length ; i++) {
	      if ( max < scores[i])
	    	  max = scores[i];
 }
          for (int i = 0; i <scores.length ; i++) {
          sum = sum + scores[i];	  
 }
          for (int i=0 ; i<scores.length ; i++) {
        	  count = count + scores.length ;
          }
          avg = sum / count;
          System.out.println("최고 점수 : "+ max);
          System.out.println("쳥균 점수 : "+ avg);
          break;
 case 5 : System.out.println("프로그램 종료");
 default : System.out.println("선택수는 1~5 중에 입력해 주세요");
 }
 
 
 
 
 
 
 
 }
 
 
 
 
 
 
 
 
 
 
 
 
 
 
	}

}
