package javaBasic.ch04.sec01;

public class While문 {

	public static void main(String[] args) {
	  // 반복문
      // 형식 While(조건) {참이면 수행할 문장}
      // 1~100 출력하기
	  // 숫자변수 만들어 1출력하기 -> 변수 +1 -> 출력 -> 출력변수 +1 
	 int number =1; //반복문은 반복이 아니란 가정하에 공식을 세우고 그 공식 속에서 반복적을 나오는 계산식을 반복해준다
	 System.out.println(number);
     number++;
	 System.out.println(number);
 
	 while ( number<100) {
	     number++;
		 System.out.println(number);
	 }
		
	// 10 20 30 40 50 ..100	
	 int number2 =1; //반복문은 반복이 아니란 가정하에 공식을 세우고 그 공식 속에서 반복적을 나오는 계산식을 반복해준다
	 System.out.println(number);
     (number*10);
	 System.out.println(number);
 
	 while ( number<100) {
	     number++;
		 System.out.println(number);	
		
		
		
	}

}
