package javaBasic.ch03.sec02;

public class Operator01 {

	public static void main(String[] args) {
      
	 int number = 10;
	 
	 number = number + 1;
	 System.out.println(number);
	 
	 number = number - 1;
	 System.out.println(number);
	 
	 number++; // number = number + 1; // 엄청 많이 쓰는 수식
	 System.out.println(number);
	 
	 number--; //
	 System.out.println(number);
	 
	 ++number; // ++ -- 앞에 쓰나 뒤에 쓰나 같음
	 System.out.println(number);
	 
	 --number;
	 System.out.println(number);
	 
	 
	 int number1 = 100;
	 number1++;
	 System.out.println(number1);
	 
	 int number2 = number1;
	 System.out.println(number2);
	 
	 int number3 = 1000;
	 number3++;
	 int number4 = number3;
	 System.out.println(number3); //1001
	 System.out.println(number4); //1001
	 
	 int number5 = 20;
	 int number6 = number5++; // =을 기준으로 수식이 뒤로 가면 
	 System.out.println(number5); //20
	 System.out.println(number6); //21
	 
     int number7 = 200;
     int number8 = ++number7; // ++가 앞자리로 가면 먼저 더하기를 하는 것이기에 ++의 위치에 따라 변화한다.
	 System.out.println(number7); //201
	 System.out.println(number8); //201
	 
	 int number9 = 2000;
	 System.out.println(number9); //2000 값을 먼저주기 때문에 선 2000이 나오고 그 뒤에 +1이 있는것이다. 2000(+1)
	 System.out.println(number9++); //2001
	 
	 int number10 = 2000;
	 System.out.println(++number10);
	 System.out.println(number10);
	}


}
