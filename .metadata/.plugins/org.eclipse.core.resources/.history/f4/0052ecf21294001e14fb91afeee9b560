//	int[] installmentPrincipal = {200000000,190000000};
//	int[] installmentPrincipal = {36,24};
//	double[] installmentPrincipal = {555555.56,791666,67};

	
	
	//대출정보에 대한 것을 배열에 넣어서 출력하기  	//월 상환액 = 대출금액/기간
	String[] 성명 = {"이민주","남지철","김춘복","민애라"};
	int[] 대출금액 = {270000000, 150000000, 150000000,120000000};
	int[] 기간 = {48,60,60,60};
	System.out.println("성명   대출종류   대출금액   기간(월)   월상환액");
	for (int i=0 ; i<성명.length ; i++) {
		System.out.println(성명[i]+" "+"주택자금대출 "+ 대출금액[i]+" "+ 기간[i] + " "+ 대출금액[i]/기간[i]);
	}
	//대출합계 구하기, 월상환액의 합 구하기
	int toSum = 0;
	int monthSum = 0;
    for (int i=0; i<성명.length ; i++) {
    	 toSum =  toSum +대출금액[i];
    	 monthSum = monthSum+대출금액[i]/기간[i];
    }
	//부서의 정보를 배열에
    String[] 사번 = {"J0001","J0003","J0008","J0009"};
    String[] 이름 = {"홍길동","이도현","한미우","박정진"};
    String[] 부서 = {"총무부","영업부","인사부","영업부"}; 
    boolean[] 성별 = {true,true,true,true};
    System.out.println(" 사번   이름   부서  성별 ");
    for (String i=0; i<사번.length; i++) {
    	System.out.println(사번[i]+" "+이름[i]+" "+부서[i]+" "+ (성별[i] ? "남":"여"));
    }
    
    
    
    
    
    
    
	
	
	}
}
