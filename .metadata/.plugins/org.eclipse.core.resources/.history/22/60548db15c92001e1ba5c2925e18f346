package javaBasic.ch01.sec15;

public class DataTypeEx {

	public static void main(String[] args) {
   // TODO Auto-generated method stub
   // 자료형 기본형 (정수형 byte int long, 실수형 - float double, 논리형 - boolean, 문자형 - char)
		
   // 정수처리
  byte b1 = 127; //-128~127
  System.out.println ( b1 );
  
  short s1 = 32767; //-32768~32767
  long lol = 9000000000000000000l;
  
  byte b2=10;
  byte b3=20;
  
  int b23 = b2+b3; //에러의 이유는 더하기는 int로 처리하기 때문 / byte(1)형 int(4)형 byte(1)형 = int형임
  
  short s2 = -20;
  short s3 = +20;
  
  int resul23 = s2-s3; // -40

  byte b4 = 20;
  short s4 = 30;
  int sumb4s4 = b4+s4; //long으로도 가능하다.
  
  float f1 =3.14f;
  float f2 =3.12345678f; //소수점 7자리까지 출력
  
  System.out.println( f1 + " " + f2 );
  
  double d1 = 3.1234567890123456; //15자리까지 출력하기
  System.out.println( d1 ) ;

  //실수형은 float - 4byte 와 double형 - 8byte  double형은 실수의 기본형이다.
  
  float f3=10.23f;
  float f4=2.45f;
   
  float mulf3f4 = f3*f4;
  System.out.println( mulf3f4 );
	}

}
