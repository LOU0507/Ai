package javaBasic2.ch05.sec03;

public class 배열연습 {

	public static void main(String[] args) {
	// 배열 : 동일한 자료들의 집합, 연속해서 저장되어있다.
	// 배열을 쓰는 이유? 정수 100개를 기억해야한다면 변수를 100개를 만들어야한다. 배열로 선언한다.
    // 배열 만드는 방법? 1차원 2차원 3차원 
	int[] arr = new int[] {1,2,3,4,5};
	String[] sArr = new String[] {"a","b"};
	double[] dArr = new double[] {1.1,2.2,3.3};
	boolean[] bArr = new boolean[] {true, false};
	byte[] byArr = new byte[] {1,2,3};
	short[] shArr = new short[] {6,7};
	float[] flArr= new float[] {1.1f,2.2f};
	
	// arr배열에 [0]의 값 1을 출력하려면
	System.out.println(arr[0]);
	// "b"를 출력하기
	System.out.println(sArr[1]);
	// 3.3 출력하기
	System.out.println(dArr[2]);
	
	//arr배열의 [1]의 값이 1을 10으로 변경
	arr[0] = 10;
	// 방법 빈 공간 배열을 만들고 나중에 값을 넣기
	int[] intArr = new int[3];
	double[] douArr = new double[5];
	
	intArr[0] = 3;
	intArr[1] = 5;
	intArr[2] = 7;

	//문자열 4개를 넣는 배열 만들기
	String[] stringArr = new String[4];
	stringArr[0]="a";
	stringArr[1]="b";
	stringArr[2]="c";
	stringArr[3]="d";
	
	int[] int2Arr = new int[100];
	for (int i=0 ; i<100; i++) {//i= 0 1 2 3 4...9
		int2Arr[i] = i +1;
		System.out.println(int2Arr[i]);}
	
	int[] intArr10= null; // null은 정해지지않은 미확정의 값
	
	//P166
	int[] score = new int[] {100,90,87,90,100};
	int sum = 0;
	for (int i = 0; i<5 ; i++) {
		sum += score[i];
	}
	int avg = sum/5;
	System.out.println("합계는 "+ sum);
	System.out.println("평균은 "+ avg);
	
	//배열의 길이 배열명.length
	System.out.println(score.length);
	
//	score[5]=60;
//	score[6]=90;

	String[] season= { "Spring", "Summer","Fall","Winter"};
	// = String[] season = new String[] { "Spring", "Summer","Fall","Winter"};
	
	System.out.println("season[0] : " +season[0]);
	System.out.println("season[1] : " +season[1]);
	System.out.println("season[2] : " +season[2]);
	System.out.println("season[3] : " +season[3]);
	
	season[1]="여름";
	System.out.println("season[1] : " +season[1]);
	System.out.println();
	int[] scores = {83,90,87};
	
	int sum1 = 0;
	for(int i=0;i<3;i++) {
		sum1+= scores[i];
	}
	System.out.println("총합 : "+sum1);
	double avg1 = (double)sum1 /3;
	System.out.println("평균 : "+avg1);
	
	//171
	String[] names = new String[30];
	System.out.println(names.length);
	
	//names.length = 25;
	
	//성적표 만들기
	//이름 점수
	//홍길동 100
	//김수진 90
	//이경주 85
	
	//1차원 배열 만들어서 출력해 보세요.
	String [] names2 = {"홍길동","김수지","이경주"};
	int [] score2 = {100,90,85};
	
	for(int i=0;i<names2.length;i++) {
		System.out.println(names2[i]+" "+score2[i]);
		
	}
	
	
	
	}
}
