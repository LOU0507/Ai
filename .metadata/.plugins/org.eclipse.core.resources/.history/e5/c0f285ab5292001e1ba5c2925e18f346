package javaBasic.ch01.sec12;

public class Calculator {

	public static void main(String[] args) {
   //5명 아르바이트 생 급여 계산하는 프로그램 작성하기
   // 1명일 경우 급여 계산하기
   // 형식 변수형태 변수명; 변수명 = 값;
	String name;
	name="홍길동"; //이름
		
	int basicPay=50000; //급여
	String phoneNumber = "010-215-1234"; //전화번호
    String accontNumber = "국민 123-12-1234"; //계좌번호
	String dept = "알바생"; //직급
    boolean sex = true; //성별
	double tex = 0.03; //세금비율
	    
	    //출력하기
	    
	    System.out.println("1번 알바 정보"+name+" "+basicPay+" "+ phoneNumber);
	    System.out.println(accontNumber + " " + dept + " " +sex + " " + tex);
	}
 
}

