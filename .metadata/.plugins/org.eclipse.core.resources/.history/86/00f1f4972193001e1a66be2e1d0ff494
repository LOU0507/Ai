package ch02.sec09;

public class 대입연산자 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
   
	int count=100;
	count +=10; // count = count + 10
	
	count -=20; // count = count -20
	
	//수식을 대입연산자로 고쳐보세요.
	count *=5;  //count =count*5 
	count /=10; //count =count/10
	count %=5; //count =count%5
	
	boolean b1 =true;
	
	b1 &= false; //b1 = b1 & false;
	b1 |= true; //b1 = b1 | true;
	
	// 삼향연사나 = 조건연산자
    // 형식 조건식 ? 참이면 : 거짓이면
	
	int score = 85;
	//90점이상이면 장학생 아니면 비장학색이라고 출력하기
	String result = (score >= 90) ? "장학생" : "비장학생"; //?는 만약에 조건이 참이면 장학생 조건이 거짓이면 비장학생에 넣어주세요
	System.out.println(result);
	
	//평균이 85.8보다 크고 합계가 1400이상이면 "통과" 아니면 "실패"라고 출력해 주기
	int aver = 89;
	int sum = 1400;
	String pass = ( aver>85.5 && sum >=1400 ) ? "통과" : "실패";
	System.out.println(pass);
	
	
	
	
	
	
	}

}
