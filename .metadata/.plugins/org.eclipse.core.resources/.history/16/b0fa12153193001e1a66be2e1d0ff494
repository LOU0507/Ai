    //교제 107쪽
    
    //문제 1
	int x=10;
	int y=20;
	int z = (++x) + (y--);
	System.out.println(z);
	
	//문제 2
	int score = 85;
	String result = (!(score>90)) ? "가" :"나";
	System.out.println(result);
	
	//문제 3
	int pencils = 534;
	int students = 30;
	
	//학생 한 명이 가지는 연필 수
	int pencilsPerStudent =pencils/students;
	System.out.println(pencilsPerStudent);
	//남은 연필수
	int pencilsLeft = pencils%students;
	System.out.println(pencilsLeft);
	
	//문제 4
	int value = 356;
	System.out.println((int)(value/100.0)*100);
	
	
	//문제 5
	int lengthTop = 5;
	int lengthBottom = 10;
	int height = 7;
	double area = ((double)((lengthTop+lengthBottom)*height/2));
	System.out.println(area);
	
	//문제 6
	
	int x6 =10;
	int y6 = 5;
	
	System.out.println((x6>7) && (y6<=5)); //참 그리고 참
	System.out.println((x6%3 == 2)||(y6%2 !=1)); //거짓 또는 거짓 --
	
	//문제 7
	//Nan (not a number) 숫자가 아니다 ->  문자이거나 논리이다.
	double x7 = 5.0;
	double y7 = 0.0; //만약에 2.0이면 NaN이 아니기 떄문에
	double z7 = 5%y7;
	System.out.println( z7 );
	//Double 대문자로 써진 것은 클래스라고 생각하면 된다. 더블이라는 클래스에 어떤 값을 모아둔 것이라고 생각하면 된다
	if ( Double.isNaN(z7)) {
		System.out.println(("0.0으로 나눌 수 없습니다."));
		} esle {
		double result7 = z7+10;
		System.out.println("결과: "+ result7);} 
	
	
	
	}

}
