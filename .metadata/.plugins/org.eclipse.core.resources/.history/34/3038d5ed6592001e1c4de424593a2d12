package javaBasic.ch01.sec15;

public class DataTypeEx {

	public static void main(String[] args) {
   // TODO Auto-generated method stub
   // 자료형 기본형 (정수형 byte int long, 실수형 - float double, 논리형 - boolean, 문자형 - char)
		
   // 정수처리
  byte b1 = 127; //-128~127
  System.out.println ( b1 );
  
  short s1 = 32767; //-32768~32767
  long lol = 9000000000000000000l;
  
  byte b2=10;
  byte b3=20;
  
  int b23 = b2+b3; //에러의 이유는 더하기는 int로 처리하기 때문 / byte(1)형 int(4)형 byte(1)형 = int형임
  
  short s2 = -20;
  short s3 = +20;
  
  int resul23 = s2-s3; // -40

  byte b4 = 20;
  short s4 = 30;
  int sumb4s4 = b4+s4; //long으로도 가능하다.
  
  float f1 =3.14f;
  float f2 =3.12345678f; //소수점 7자리까지 출력
  
  System.out.println( f1 + " " + f2 );
  
  double d1 = 3.1234567890123456; //15자리까지 출력하기
  System.out.println( d1 ) ;

  //실수형은 float - 4byte 와 double형 - 8byte  double형은 실수의 기본형이다.
  
  float f3=10.23f;
  float f4=2.45f;
   
  float mulf3f4 = f3*f4;
  System.out.println( mulf3f4 );
  
  double d3=3.14;
  double d4=12.65;
  
  double muld3d4 = d3*d4;
  //float muld3d4 = d3*d4; 에러 발생 왜? 작은 타입으로 넣어주니깐
  
  System.out.println(muld3d4);
  
  double resulf3f4 = f3*f4; // float 자료형이 double로 변환됨 = 형변환 cast 연산 / 자동형변환
  
  int ii1=10;
  short ss1=20;
  
  float ff1 = ii1; //int형이 float형으로 바뀐 것도 형변한이다. 정수가 실수가 되는 것이니깐 형변환/ 자동형변환이다.
  
  // 실수형 --> 정수형 30평 아파트-->8평원룸 가구를 버려야한다. 데이터손실
  // 중요 ※ 형식  정수형 변수명 = (정수형타입) 실수형변수 
  
  double d10 = 3.14;
  int chang10 = (int) d10; //소수점 .14를 손실했다.
  System.out.println(d10+ " "+chang10);  
  
  float f10 = 10.25f; 
  byte changef10 = (byte)f10; //형변환 = 강제형변환 = 큰 타입이 작은 타입으로 바꿈
  
  int i10 = 3000;
  short chi10 = (short)i10; //형변환 = 강제형변환 = 큰 타입을 작은 타입으로 바꿈
  
  
  //문 정수형으로 국어점수 수학점수 영어점수 변수 담으세요.
  int ko1 = 80;
  int ma1 = 95;
  int en1 = 78;
  
  int sum111 = ko1 + ma1 + en1;
  System.out.println("합계는 "+sum111);
  
  float aver111 = sum111 /3;
  System.out.println("평균은 "+aver111);
  
  
  
  
	}

}
