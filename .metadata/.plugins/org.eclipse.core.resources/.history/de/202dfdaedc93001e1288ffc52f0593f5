	//for문
	/*형식
	 * for( 초기값 ; 조건식 ; 증가값 ) {
	 * 반복 할 내용
	 * };
	 *
	 */
    System.out.println("--------------------"); 		
	// 1 2 3 4 5 6 7 8	
	for (int i =1; i<=10; i++ ) {
		System.out.println(i);
	}
	
	// 1 2 3 4 5 6 7 ... 50
	for (int i2 =1; i2<=50; i2++ ) {
		System.out.println(i2);
	}
	
	//50 49 48 47 .....1
	for (int i3 = 50; i3 > 0; i3--) {
		System.out.println(i3);
	}
	// 1 10
	// 2 11
	for (int i4=1 , i5=10 ; i4<=10 || i5<=20; i4++,i5++) {
	System.out.println( i4 + " " + i5);}
	
	// 1~100 100~1 200~300
	for (int a=0, b=100, c=200 ; a <=100||b>=1||c<=300 ; a++, b--, c++) {
		System.out.println(a+" " +b+ " " +c);
	}
	//1
	//1 2
	
	//2
	//2 3
	for (int i=1; i<=3; i++) {
		System.out.println(i);
		for ( int j=i; j <= i+1 ;j++)
		System.out.println(j);}

	
	System.out.println("--------------------"); 	
	
	
	
	
	
	
	
	
	
	
	
	}

}
